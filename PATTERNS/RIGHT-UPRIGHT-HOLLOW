#include<stdio.h>
int main()
{
    int n=5, m=n, i,j,k;
    for(i=0; i<n; i++)
    {
        for(j=0; j<m-1; j++)
        {
            printf(" \t");
        }
        for(k=j; k<n; k++)
        {
            if(k==j || i==n-1 || k==n-1)
                printf("*\t");
            else
                printf(" \t");
        }
        m=m-1;
        printf("\n");
    }
    return 0;
}
