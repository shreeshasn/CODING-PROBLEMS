#include<stdio.h>
int main()
{
    int n=5, i,j;
    for(i=n-1; i>=0; i--)
    {
        for(j=0; j<n-i-1; j++)
            printf(" ");
        
        for(j=0; j<i+1; j++)
            if(j==0 || j==n-1 || j==i || i==n-1)
                printf("* ");
            else
                printf("  ");
    
        printf("\n");
    }
    for(i=0; i<n; i++)
    {
        for(j=0; j<n-i-1; j++)
            printf(" ");
        
        for(j=0; j<i+1; j++)
            if(j==0 || j==n-1 || j==i || i==n-1)
                printf("* ");
            else
                printf("  ");
    
        printf("\n");
    }
    return 0;
}
